<IfModule mod_rewrite.c>
  # Force Apache to serve index.html
  DirectoryIndex index.html

  RewriteEngine On
  RewriteBase /vp360/

  # Security: Block access to .git and .env files
  RewriteRule ^\.git - [F,L]
  RewriteRule ^\.env - [F,L]

  # SPA Routing: Fallback to index.html for non-existent files
  FallbackResource /vp360/index.html
</IfModule>
